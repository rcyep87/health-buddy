<%= form_for @sleep do |f| %>
  <div class="field">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>
  <div class="field">
    <%= f.label :start_time %>
    <%= f.time_field :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %>
    <%= f.time_field :end_time %>
  </div>
  <div class="field">
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </div>
  <%= f.submit %>
<% end %>
