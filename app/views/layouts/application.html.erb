<!DOCTYPE html>
<html>
    <head>
        <title>HealthBuddy</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
    </head>

<body class="<%= time_of_day_random %>">
  <% if user_signed_in? %>
    <nav>
      <div class="nav-wrapper">
        <a href="#" class="logo-short">H<span>B</span></a>
        <a href="#" class="logo">Health<span>Buddy</span></a>
        <ul id="nav-mobile" class="nav-menu">
          <li><%= link_to "Dashboard"      , user_dashboard_path %></li>
          <li><%= link_to "Logout"         , destroy_user_session_path, method: :DELETE %></li>
        </ul>
      </div>
    </nav>
  <% end %>

  <div class="container">
    <%= yield %>
  </div>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
